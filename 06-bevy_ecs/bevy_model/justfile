# Development tool commands

# Run test_num with output
test num:
    RUST_LOG=bevy_model=info cargo test test_{{num}} -- --nocapture
# Format code
fmt:
    cargo fmt

# Check code
check:
    cargo check

# Build project
build:
    cargo build

# Build release version
build-release:
    cargo build --release

# Clean build files
clean:
    cargo clean


# Generate documentation
doc:
    cargo doc --open

# Show project info
info:
    @echo "Project Info:"
    @echo "  Name: bevy_model"
    @echo "  Version: 0.1.0"
    @echo "  Description: Event-driven ECS system"
    @echo ""
    @echo "Available commands:"
    @just --list
